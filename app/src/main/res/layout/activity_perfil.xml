<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plomo"
    tools:context=".Perfil_Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:cardBackgroundColor="@color/red"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-6dp">

        <TextView

            android:id="@+id/textView3"
            :layout_editor_absoluteY="644dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"

            android:layout_marginLeft="170dp"
            android:text="Perfil"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp"

            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"

            android:background="@drawable/jose"
            android:src="@drawable/jose" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jose Francico Garcia Veiga"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="280dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="350dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/en"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/textDNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCodP"
                android:text="DNI"
                android:textSize="18dp"
                android:textColor="@color/azul"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/plomo"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="459dp"

                >

                <TextView
                    android:id="@+id/DNI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="702997177"
                    android:textSize="17dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="420dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/telefono"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/textcelular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCodP"
                android:text="N° Celular"
                android:textSize="18dp"
                android:textColor="@color/azul"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/plomo"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="459dp"

                >

                <TextView
                    android:id="@+id/celular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="987654321"
                    android:textSize="17dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="490dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/sobrep"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/textCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCodP"
                android:text="Correo"
                android:textSize="18dp"
                android:textColor="@color/azul"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/plomo"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="459dp"

                >

                <TextView
                    android:id="@+id/correo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Abv@gmail.com"
                    android:textSize="17dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:backgroundTint="@color/red"

        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="600dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>