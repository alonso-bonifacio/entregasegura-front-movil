<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plomo"
    tools:context=".Menu_Activity" >

    <androidx.cardview.widget.CardView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/red"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/agunza"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/agunzablanco" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/paquete"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/EntregasP"
        android:layout_width="204dp"
        android:layout_height="33dp"
        android:text="Entregas Pendientes"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="105dp"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="159dp">

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCodP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cod. Paquete: 123456789"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/NombreC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCodP"
                android:text="Josefina Palante Torres"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/DNIcli"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/NombreC"
                android:text="DNI: 76543210"
                android:textSize="16dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>