<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plomo"
    tools:context=".Historial_Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/red"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-6dp">


        <TextView

            android:id="@+id/textView3"
            :layout_editor_absoluteY="644dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            android:layout_marginBottom="640dp"
            android:text="Historial"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="end"
            android:layout_marginRight="35dp"
            android:src="@drawable/filtro" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/EntregasP"
        android:layout_width="204dp"
        android:layout_height="33dp"
        android:text="Octubre 2023"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="96dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="135dp">

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCodP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cod. Paquete: 123456789"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NombreC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCodP"
                android:text="Josefina Palante Torres"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/fechaEnt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/NombreC"
                android:text="20 de Sep.2023 - 5:30pm"
                android:textSize="15dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>