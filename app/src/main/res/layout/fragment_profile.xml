<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/plomo"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView9"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            app:cardBackgroundColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/profileFoto"
                    android:background="@drawable/jose"
                    android:src="@drawable/jose" />

                <TextView
                    android:id="@+id/profileNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando ..."
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView10"
            android:layout_width="365dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView9">

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/en" />

                <TextView
                    android:id="@+id/textDNI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCodP"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="DNI"
                    android:textColor="@color/azul"
                    android:textSize="18dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    app:cardBackgroundColor="@color/plomo"
                    app:cardCornerRadius="10dp"
                    tools:layout_editor_absoluteX="70dp"
                    tools:layout_editor_absoluteY="459dp"

                    >

                    <TextView
                        android:id="@+id/profileDni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="Cagando ..."
                        android:textSize="17dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView11"
            android:layout_width="365dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView10">

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/telefono" />

                <TextView
                    android:id="@+id/textcelular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCodP"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="N° Celular"
                    android:textColor="@color/azul"
                    android:textSize="18dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    app:cardBackgroundColor="@color/plomo"
                    app:cardCornerRadius="10dp"
                    tools:layout_editor_absoluteX="70dp"
                    tools:layout_editor_absoluteY="459dp"

                    >

                    <TextView
                        android:id="@+id/profileNumCelular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="Cargando ..."
                        android:textSize="17dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView12"
            android:layout_width="365dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView11">

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/sobrep" />

                <TextView
                    android:id="@+id/textCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCodP"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Correo"
                    android:textColor="@color/azul"
                    android:textSize="18dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="215dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="@color/plomo"
                    app:cardCornerRadius="10dp"
                    tools:layout_editor_absoluteX="70dp"
                    tools:layout_editor_absoluteY="459dp"

                    >

                    <TextView
                        android:id="@+id/profileCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="Cargando ..."
                        android:textSize="17dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnCerrar"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:text="Cerrar Sesión"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView12"
            app:layout_constraintVertical_bias="0.27"
            android:layout_width="160dp"
            android:layout_height="59dp"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>